<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title - GeoNorge Metadata Monitor</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="@ViewBag.Description">
        <meta name="author" content="Arkitektum AS for Kartverket">

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap/css/bundle")

        @RenderSection("Head", required: false)

        @Scripts.Render("~/bundles/modernizr")
        
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="@Url.Action("Index", "Dashboard")">
                GeoNorge Metadata Monitor 
                    @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
                    {
                        <text> - @ViewBag.Title</text>
                    }
                </a>
                @RenderSection("navbar", required: false)
            </div>
        </div>
        <div class="container">
            <header class="clearfix">
                <div class="pull-right">
                    <a href="http://www.norgedigitalt.no" target="_blank"><img src="~/Content/ND_logo_76x75.gif" width="76" height="75" alt="Norge Digitalt logo"/></a>
                    <a href="http://www.kartverket.no" target="_blank"><img src="~/Content/logo-kartverket-100x75.png" width="100" height="75" alt="Kartverket logo"/></a>
                </div>
                @if (!string.IsNullOrWhiteSpace(ViewBag.PageHeader))
                {
                    <h1>@ViewBag.PageHeader</h1>
                }
                @RenderSection("PageHeader", required: false)
            </header>
            @RenderBody()
            <hr>
            <footer>
                <p class="pull-right text-small">Utviklet av <a href="http://www.arkitektum.no" target="_blank">Arkitektum AS</a></p>
            </footer>
        </div>        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Content/bootstrap/js/bundle")
        @Scripts.Render("~/Scripts/Chart.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
