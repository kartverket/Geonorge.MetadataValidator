<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title - Kartverket</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap/css/bundle")

        @RenderSection("Head", required: false)

        @Scripts.Render("~/bundles/modernizr")
        
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <style type="text/css">
            body { background-color: #fff; }
            .navbar-inner { border-radius: 0; }
            .site-logo { float: right;}
            .site-logo img { float: left; }

            .results { margin: 50px; }
            .results .colorbox {
                width: 40px;
                height: 40px;
                border-radius: 10px;
                margin-right: 10px;
            }
            .results .description {
                font-size: 2em;
                padding-top: 10px;
                padding-left: 10px;
            }

            .results-ok .colorbox { background-color: #69D2E7; }
            .results-ok .description { color: #69D2E7; }
            .results-failed .colorbox { background-color: #F38630; }
            .results-failed .description { color: #F38630; }
        </style>
    </head>
    <body>
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="/">Metadata Monitor - @ViewBag.Title</a>
                <ul class="nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/validator/harvest">Start høsting av metadata</a></li>  
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="container">
            <div class="site-logo">
                <img src="~/Content/logo-kartverket-100x75.png" width="100" height="75" alt="Kartverket logo"/>            
            </div>
            @RenderBody()
            <hr>
            <footer>
                <p class="pull-right">@DateTime.Now</p>
            </footer>
        </div>        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Content/bootstrap/js/bundle")
        @Scripts.Render("~/Scripts/Chart.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
